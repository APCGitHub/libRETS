top_srcdir=@top_srcdir@

SHELL = /bin/sh

prefix=@prefix@
datadir=@datadir@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@
sysconfdir=@sysconfdir@
docdir=$(datadir)/doc

INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@

CC=@CC@
CXX=@CXX@
CFLAGS=@CFLAGS@ @DEFS@
LIBS=@LIBS@
LDFLAGS=@LDFLAGS@

USE_DEPENDS=@USE_DEPENDS@

TARGET=unix
TARGET_CFLAGS=-DTARGET_UNIX

BOOST_PREFIX=/usr/local
BOOST_LIB_PATH=$(BOOST_PREFIX)/lib
BOOST_INC_PATH=$(BOOST_PREFIX)/include
BOOST_CFLAGS=
BOOST_LDFLAGS=$(BOOST_LIB_PATH)/libboost_filesystem.a

CURL_PREFIX=/usr/local
CURL_LIB_PATH=$(CURL_PREFIX)/lib
CURL_INC_PATH=$(CURL_PREFIX)/include
CURL_CFLAGS=
CURL_LDFLAGS=$(CURL_LIB_PATH)/libcurl.a -lssl -lcrypto -lz

EXPAT_PREFIX=/usr/local
EXPAT_LIB_PATH=$(EXPAT_PREFIX)/lib
EXPAT_INC_PATH=$(EXPAT_PREFIX)/include
EXPAT_CFLAGS=
EXPAT_LDFLAGS=$(EXPAT_LIB_PATH)/libexpat.a

ANTLR_PREFIX=/usr/local
ANTLR=/usr/local/bin/antlr
ANTLR_LDFLAGS=-lantlr

CPPUNIT_PREFIX=/usr/local
CPPUNIT_LDFLAGS=-lcppunit


# Put targets here so that zsh can complete on them, as zsh won't
# follow the include directives.
all: _all
debug: _debug
build: _build

doc: _doc
doc-api: _doc-api

test: _test

dist: _dist
clean: _clean
distclean: _distclean
maintainer-clean: _maintainer-clean

include $(top_srcdir)/project/build/sources.mk
include $(top_srcdir)/project/build/rules.mk
